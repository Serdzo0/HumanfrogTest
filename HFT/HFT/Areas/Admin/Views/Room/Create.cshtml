@model RoomModel



<form method="post" class="row" enctype="multipart/form-data">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Ustvari novo sobo!</h2>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Name" class="p-0"></label>
			<input asp-for="Name" class="form-control"/>
			<span asp-validation-for="Name" class="text-danger"> </span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Cena" class="p-0"></label>
			<input asp-for="Cena" class="form-control"/>
			<span asp-validation-for="Cena" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="ShortDescription" class="p-0"></label>
			<input asp-for="ShortDescription" class="form-control"/>
			<span asp-validation-for="ShortDescription" class="text-danger"></span>

		</div>
		<div class="mb-3 row p-1">
			<label asp-for="LongDescription" class="p-0"></label>
			<textarea asp-for="LongDescription" class="form-control"> </textarea>
			<span asp-validation-for="LongDescription" class="text-danger"></span>

		</div>
		<div class="mb-3 row p-1">
			<label asp-for="ImageURL" class="p-0"></label>
			<input type="file" name="file" class="form-control"/> 

		</div>
		<div class="row">
			<div class="col-6  col-md-3">
				 <button type="submit" class="btn btn-primary form-control">Ustvari</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Room" asp-action="Index" class="btn btn-outline-secondary border form-control">
					Nazaj na seznam
				</a>
			</div>
		</div>
		
	</div>
</form>
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}